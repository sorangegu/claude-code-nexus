{
  "name": "claude-code-nexus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "wrangler dev",
    "dev:frontend": "vite --config frontend/vite.config.mts",
    "build": "pnpm generate:html && pnpm build:client && pnpm build:server",
    "build:client": "vite build --config frontend/vite.config.mts",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir ../dist/server --config frontend/vite.config.mts",
    "generate:html": "tsx scripts/generateHtml.ts",
    "deploy": "pnpm build && wrangler deploy --env production",
    "serve:prod": "pnpm build && wrangler dev --env production",
    "test": "vitest",
    "cf-typegen": "wrangler types",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "db:seed": "wrangler d1 execute DB --local --file=./drizzle/seed.sql",
    "db:seed:prod": "wrangler d1 execute DB --remote --file=./drizzle/seed.sql",
    "typecheck": "tsc --noEmit && tsc -p frontend/tsconfig.json --noEmit",
    "lint": "tsx",
    "format": "eslint . --fix"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.7.5",
    "@cloudflare/workers-types": "^4.20250320.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.31.4",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "tsx": "^4.20.3",
    "typescript": "^5.5.2",
    "unocss": "^0.61.0",
    "vite": "^5.3.1",
    "vitest": "~3.0.7",
    "wrangler": "^4.3.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "0.18.0",
    "@mui/icons-material": "^5.17.1",
    "@mui/material": "^5.17.1",
    "@mui/system": "^7.1.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@tanstack/react-query": "^5.81.2",
    "@unocss/reset": "^66.3.2",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "framer-motion": "^12.23.0",
    "hono": "4.4.0",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.5.3",
    "react-router-dom": "6.23.1",
    "zod": "^3.22.4"
  }
}
